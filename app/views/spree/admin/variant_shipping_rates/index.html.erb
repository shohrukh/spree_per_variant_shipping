<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/admin/shared/product_tabs', :locals => {:current => 'Variant Shipping Rates'} %>

<% if @variant_shipping_rates.any? %>
  <table class="index">
    <colgroup>
      <col style="width: 5%" />
      <col style="width: 25%" />
      <col style="width: 20%" />
      <col style="width: 20%" />
      <col style="width: 15%" />
      <col style="width: 15%" />
    </colgroup>
    <thead data-hook="variant_shipping_rates_header">
    <tr>
      <th><%= Spree.t(:id) %></th>
      <th><%= Spree.t(:variant) %></th>
      <th><%= Spree.t(:zone) %></th>
      <th><%= Spree.t(:ground_rate) %></th>
      <th><%= Spree.t(:standard_rate) %></th>
      <th class="actions"></th>
    </tr>
    </thead>
    <tbody>
    <% @variant_shipping_rates.each do |variant_shipping_rate| %>
      <tr id="<%= spree_dom_id variant_shipping_rate %>" data-hook="variant_shipping_rates_row" class="<%= cycle('odd', 'even')%>">
        <td class="align-center"><%= variant_shipping_rate.id %></td>
        <td class="align-center"><%= variant_shipping_rate.variant.sku %></td>
        <td class="align-center"><%= variant_shipping_rate.zone.name %></td>
        <td class="align-center"><%= variant_shipping_rate.ground_rate %></td>
        <td class="align-center"><%= variant_shipping_rate.standard_rate %></td>
        <td class="actions">
          <%= link_to_edit(variant_shipping_rate, :no_text => true) %>
          &nbsp;
          <%= link_to_delete(variant_shipping_rate, :no_text => true) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= Spree.t(:no_resource_found, resource: I18n.t(:other, scope: 'activerecord.models.spree/variant_shipping_rate')) %>,
    <%= link_to Spree.t(:add_one), spree.new_admin_product_variant_shipping_rate_path(@product) %>!
  </div>
<% end %>

<% content_for :page_actions do %>
  <ul class="inline-menu" data-hook="toolbar">
    <li id="new_supplier_product_link" data-hook>
      <%= link_to_with_icon('icon-plus', Spree.t(:new_variant_shipping_rate), new_admin_product_variant_shipping_rate_path(@product), :'data-update' => 'new_variant_shipping_rate', :class => 'button') %>
    </li>
  </ul>
<% end %>